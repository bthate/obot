#!/usr/bin/python3

__version__ = 1

import os, sys ; sys.path.insert(0, os.getcwd())

import logging
import shutil
import time
import unittest

import ob

from ob import k
from ob.cls import get_cls
from ob.log import level
from ob.shl import execute, parse_cli
from ob.tms import elapsed

def initialize():
    k.walk("ob")
    k.walk("obot")
    k.walk("obot.cmd")
    for c in k.classes:
        try:
            o = get_cls(c)()
            o.txt = "yo!"
            o.save()
        except TypeError as ex:
            pass

def main():
    parse_cli(wd="testdata")
    try:
        shutil.rmtree("testdata")
    except:
        pass
    ob.workdir = "testdata"
    level("debug")
    initialize()
    k.cfg.exclude = "mdl,rss"
    k.cfg.debug = True
    level(k.cfg.level)
    test_path = os.getcwd() + os.sep + "tests"
    p = ""
    if k.cfg.args:
        p = "test_%s*" % k.cfg.args[0]
    if not p:
        p = "test_*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=p)
    unittest.TextTestRunner(verbosity=3).run(suite)
   
execute(main)
print(elapsed(time.time() - k.state.starttime))
os._exit(0)
