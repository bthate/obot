#!/usr/bin/python3
# OBOT - 24/7 channel daemon
#
#

from ob.krn import boot, execute, scandir, os, sys
from ob.trm import termreset
from ob.utl import privileges

def daemon():
    pid = os.fork()
    if pid != 0:
        termreset()
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())

def main():
    k = boot("obot", root=True)
    if "d" in k.cfg.opts:
        daemon()
        privileges("obot")
    k.walk("obot,omod")
    scandir(k.cfg.wd)
    if k.cfg.txt:
        return k.cmd(k.cfg.otxt)
    k.init(k.cfg.mods)
    k.start()
    k.wait()

execute(main)
os._exit(0)
