#!/usr/bin/python3 -u

import os, sys ; sys.path.insert(0, os.getcwd())

from ob import __version__
from ob.bot import Console
from ob.kernel import k
from ob.shell import execute, parse_cli
from ob.utils import hd

def main():
    parse_cli("ob", __version__, hd(".ob"), "ob [options] cmd")
    k.walk("ob.cmds")
    k.init(k.cfg.modules)
    k.start()
    bot = Console()
    bot.sync(k)
    bot.start()
    bot.wait()
        
execute(main)
os._exit(0)
